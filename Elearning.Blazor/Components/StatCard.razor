<div class="card stat-card">
    <div class="stat-icon" style="@IconStyle">
        <i class="@Icon"></i>
    </div>
    <div>
        <div class="stat-label">@Label</div>
        <div class="stat-value">@Value</div>
    </div>
</div>

@code {
    [Parameter] public string Icon { get; set; } = "bi bi-speedometer2";
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = "0";
    [Parameter] public string IconBackground { get; set; } = string.Empty;

    private string IconStyle => string.IsNullOrWhiteSpace(IconBackground)
        ? string.Empty
        : $"background:{IconBackground};color:#fff;";
}
